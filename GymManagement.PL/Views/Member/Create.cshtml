@using GymManagement.BLL.ViewModels.Member
@model CreateMemberViewModel
@{
    ViewData["Title"] = "Power fitness | Create Member";
}

<header class="mb-4">
    <h3 class="text-primary-color">Add Member</h3>
</header>
<form method="post" asp-action="Create" asp-controller="Member">

    <!-- Step navigation -->
    <ul class="nav nav-tabs mb-4" id="addMemberTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="member-tab" data-bs-toggle="tab"
                    data-bs-target="#member-info" type="button" role="tab">
                Member Info
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="health-tab" data-bs-toggle="tab" data-bs-target="#health-info"
                    type="button" role="tab">
                Health Data
            </button>
        </li>
    </ul>

    <!-- Tab content -->
    <div class="tab-content">
        <!-- Member Info -->
        <div class="tab-pane fade show active" id="member-info" role="tabpanel"
             aria-labelledby="member-tab">
            <div class="section-header mb-3">
                <h5 class="text-primary fw-bold">Personal Information</h5>
                <hr class="mt-2">
            </div>
            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <label class="form-label" asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" type="text" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label class="form-label" asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" type="text" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>

                </div>

                <div class="col-12 col-md-6">
                    <label class="form-label" asp-for="@Model.Phone"></label>
                    <input asp-for="@Model.Phone" type="text" class="form-control" />
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6">
                    <label class="form-label" asp-for="@Model.DateOfBirth"></label>
                    <input asp-for="@Model.DateOfBirth" type="text" class="form-control" />
                    <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label class="form-label" asp-for="@Model.Gender">Gender</label>
                    <select asp-for="@Model.Gender" class="form-select">
                        <option value="">-- Select Gender --</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <span asp-validation-for="@Model.Gender" class="text-danger"></span>

                </div>

            </div>
            <div class="section-header mb-3 mt-4">
                <h5 class="text-primary fw-bold">Address Information</h5>
                <hr class="mt-2">
            </div>
            <div class="row g-3">

                <div class="col-12 col-md-6">
                    <label class="form-label" asp-for="@Model.BuildingNumber"></label>
                    <input asp-for="@Model.BuildingNumber" type="text" class="form-control" />
                    <span asp-validation-for="@Model.BuildingNumber" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label class="form-label" asp-for="@Model.Street"></label>
                    <input asp-for="@Model.Street" type="text" class="form-control" />
                    <span asp-validation-for="@Model.Street" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6">
                    <label class="form-label" asp-for="@Model.City"></label>
                    <input asp-for="@Model.City" type="text" class="form-control" />
                    <span asp-validation-for="@Model.City" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Health Data -->
        <div class="tab-pane fade" id="health-info" role="tabpanel" aria-labelledby="health-tab">
            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <label class="form-label" asp-for="@Model.HealthRecord.Height"></label>
                    <input asp-for="@Model.HealthRecord.Height" type="text" class="form-control" />
                    <span asp-validation-for="@Model.HealthRecord.Height" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label class="form-label" asp-for="@Model.HealthRecord.Weight"></label>
                    <input asp-for="@Model.HealthRecord.Weight" type="text" class="form-control" />
                    <span asp-validation-for="@Model.HealthRecord.Weight" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label class="form-label" asp-for="@Model.HealthRecord.BloodType">Blood Type</label>
                    <select asp-for="@Model.HealthRecord.BloodType" class="form-select">
                        <option value="">Select</option>
                        <option>A+</option>
                        <option>A-</option>
                        <option>B+</option>
                        <option>B-</option>
                        <option>O+</option>
                        <option>O-</option>
                        <option>AB+</option>
                        <option>AB-</option>
                    </select>
                    <span asp-validation-for="@Model.HealthRecord.BloodType" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6">
                    <label class="form-label" asp-for="@Model.HealthRecord.Note"></label>
                    <input asp-for="@Model.HealthRecord.Note" type="text" class="form-control" />
                    <span asp-validation-for="@Model.HealthRecord.Note" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <footer class="d-flex justify-content-end gap-3 mt-4">
        <a asp-controller="Member" asp-action="Index" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left me-2"></i> Back to List
        </a>

        <button type="submit" class="btn btn-primary px-4">
            <i class="bi bi-plus-circle me-2"></i> Add
        </button>
    </footer>

</form>
