@using GymManagement.BLL.ViewModels.Trainer
@model UpdateTrainerViewModel

<div class="container mt-4">
    <header class="mb-4">
        <h3 class="text-primary-color">Edit Trainer</h3>
        <p class="text-muted">Update trainer information</p>
    </header>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="mb-4 pb-3 border-bottom">
                        <small class="text-muted d-block mb-1">Editing Profile For</small>
                        <h4 class="mb-0 text-black">@Model.Name</h4>
                    </div>
                    <form asp-action="Edit" method="post" asp-controller="Trainer" asp-route-id="@Model.Id">
                        <input type="hidden" asp-for="Id" value="@Model.Id" />
                        <input type="hidden" asp-for="Name" value="@Model.Name" />
                        <!-- Personal Information -->
                        <div class="section-header mb-3">
                            <h5 class="text-primary fw-bold">Personal Information</h5>
                            <hr class="mt-2">
                        </div>
                        <div class="row g-3 mb-4">


                            <div class="col-md-6">
                                <label class="form-label" asp-for="Email">Email Address</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label" asp-for="Phone">Phone</label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" asp-for="BuildingNumber">BuildingNumber</label>
                                <input asp-for="BuildingNumber" class="form-control" />
                                <span asp-validation-for="BuildingNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" asp-for="Street">Street</label>
                                <input asp-for="Street" class="form-control" />
                                <span asp-validation-for="Street" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" asp-for="City">City</label>
                                <input asp-for="City" type="text" class="form-control" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Professional Information -->
                        <div class="section-header mb-3">
                            <h5 class="text-primary fw-bold">Professional Information</h5>
                            <hr class="mt-2">
                        </div>
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label fw-semibold" asp-for="Specialties">
                                    Specializations <span class="text-danger">*</span>
                                </label>

                                <div class="form-check">
                                    <input class="form-check-input" type="radio" id="Specialties_1" asp-for="Specialties" value="GeneralFittness" />
                                    <label class="form-check-label" for="Specialties_1">General Fitness</label>
                                </div>

                                <div class="form-check">
                                    <input class="form-check-input" type="radio" id="Specialties_2" asp-for="Specialties" value="Yoga" />
                                    <label class="form-check-label" for="Specialties_2">Yoga</label>
                                </div>

                                <div class="form-check">
                                    <input class="form-check-input" type="radio" id="Specialties_3" asp-for="Specialties" value="Boxing" />
                                    <label class="form-check-label" for="Specialties_3">Boxing</label>
                                </div>

                                <div class="form-check">
                                    <input class="form-check-input" type="radio" id="Specialties_4" asp-for="Specialties" value="CrossFit" />
                                    <label class="form-check-label" for="Specialties_4">CrossFit</label>
                                </div>

                                <span asp-validation-for="Specialties" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="Index" asp-controller="Trainer" class="btn btn-outline">
                                <i class="bi bi-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-fill">
                                <i class="bi bi-check-lg me-1"></i>Update Trainer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
